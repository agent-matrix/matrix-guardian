# This is an example file. Copy to .env and fill in your actual values.

# --- Required ---
DATABASE_URL="postgresql+psycopg://matrix:matrix@localhost:5432/matrix_guardian"
MATRIXHUB_API_BASE="https://api.matrixhub.io"
MATRIX_AI_BASE="https://your-user-name-matrix-ai.hf.space"
API_TOKEN="changeme-this-is-a-secret"

# --- Optional ---
LOG_LEVEL="DEBUG"
JWT_PUBLIC_KEY_PEM="" # If using JWT for auth, paste the public key here.
HTTP_TIMEOUT_SECONDS=10
HTTP_RETRIES=3
SANDBOX_ALLOWED_HOSTS="api.matrixhub.io,some-other-host.com"
SANDBOX_CPU_LIMIT=1
SANDBOX_MEM_MB=512
SANDBOX_TIMEOUT_SEC=30

# >>> AUTOPILOT: env defaults
AUTOPILOT_ENABLED=false
AUTOPILOT_API_ENABLED=false
AUTOPILOT_INTERVAL_SEC=60
AUTOPILOT_POLICY=src/guardian/agents/policies/default_policy.yaml
AUTOPILOT_SAFE_MODE=true
# <<< AUTOPILOT: env defaults
