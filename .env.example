# Matrix Guardian Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=matrix
POSTGRES_PASSWORD=matrix
POSTGRES_DB=matrix_guardian
POSTGRES_PORT=5432

# Full database URL (automatically constructed if not specified)
# DATABASE_URL=postgresql+psycopg://matrix:matrix@db:5432/matrix_guardian

# =============================================================================
# GUARDIAN API CONFIGURATION
# =============================================================================
GUARDIAN_PORT=8000
LOG_LEVEL=info
UVICORN_WORKERS=2

# API Authentication Token
API_TOKEN=dev-secret-token

# =============================================================================
# MATRIX ECOSYSTEM INTEGRATION
# =============================================================================
# Matrix Hub API endpoint
MATRIXHUB_API_BASE=https://api.matrixhub.io

# Matrix AI endpoint (HuggingFace Space URL)
MATRIX_AI_BASE=https://your-user-name-matrix-ai.hf.space

# =============================================================================
# AUTOPILOT CONFIGURATION
# =============================================================================
AUTOPILOT_ENABLED=true
AUTOPILOT_API_ENABLED=false
AUTOPILOT_INTERVAL_SEC=60
AUTOPILOT_SAFE_MODE=true
AUTOPILOT_POLICY=src/guardian/agents/policies/default_policy.yaml

# =============================================================================
# SECURITY CONFIGURATION (Production)
# =============================================================================
# Uncomment and set for production deployment
# SECRET_KEY=your-super-secret-key-change-this-in-production
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# MONITORING & OBSERVABILITY (Optional)
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn
# ENABLE_METRICS=true
# METRICS_PORT=9090

# =============================================================================
# AI PROVIDER CONFIGURATION (Optional)
# =============================================================================
# OpenAI
# OPENAI_API_KEY=sk-...

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-...

# WatsonX
# WATSONX_API_KEY=...
# WATSONX_PROJECT_ID=...

# Ollama (for local LLMs)
# OLLAMA_BASE_URL=http://localhost:11434
